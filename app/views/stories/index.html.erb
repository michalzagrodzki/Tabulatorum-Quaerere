<body>
<h1>Stories#index</h1>
<p>Find me in app/views/stories/index.html.erb</p>

<%= form_tag(stories_path, :method => "get", class: "navbar-form", id: "search-form" ) do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "col-md-2", placeholder: "Search stories" %>
      <button class="btn" type="submit"><i class="glyphicon glyphicon-search">Search</i></button>
    </div>
<% end %>
<% yield %>

<% @stories.each do |story| %>
    <div> <%= link_to story.name, story %></div>
<% end %>

</body>